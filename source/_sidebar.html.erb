<!-- Sidebar -->
<div id="sidebar" class="col-lg-3 col-sm-3">
	<div class="sidepanel widget_search">
		<form class="search_form" action="#" method="get" name="search_form">
			<input class="input_wt" type="text" name="Search the site..." value="Search the site..." onFocus="if (this.value == 'Search the site...') this.value = '';" onBlur="if (this.value == '') this.value = 'Search the site...';" />
			<input class="btn btn-default" type="submit" value="Search!">
		</form>
	</div>
							
	<div class="sidepanel widget_text">
			<h2>Thinking Of Leadership</h2>
			<ul class="foot_links">
<% blog('thinking-of-leadership').articles[0...5].each_with_index do |article, i| %>
				<li>
					<span class="glyphicon glyphicon-play-circle"></span>
					<%= link_to article.title, article %>
				</li>
<% end %>				
			</ul>		
	</div><!-- .sidepanel -->
                            
   
	</div><!-- .sidepanel -->
</div><!-- //Sidebar -->