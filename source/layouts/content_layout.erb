<% wrap_layout :layout do %>

<div class="row breadcrumbs_block padbot20">
	<div class="col-lg-12 col-sm-12">
		<!-- LOGO -->
		<div class="logo">
			<a href="/index.html"><img src="/images/vfgtop.png"></a> 
		</div><!-- LOGO -->
	</div>
</div>
<!-- Blog content -->
<section class="our_vision">
	<div class="row">
		<!-- Blog Post -->
		<div class="col-lg-9 col-sm-9 padbot20">
			<div class="blog_post">
				<div class="panel panel-default">
					<div class="panel-body">
						<%= partial "content_meta" %>
					</div>
					<div class="panel-heading">
						<h3 class="panel-title"><%= current_page.data.title %></h3>
					</div>
					<div class="panel-body">
						<%= yield %>
					</div>
				</div>

				<%= partial "next_and_previous" %>
			</div>
			<%= partial current_page.blog_options.name.underscore %>
		</div>
		<%= partial "sidebar" %>

		<!-- //Blog Post -->
	</div>			
					
</section><!-- //Blog content -->
<% end %>
